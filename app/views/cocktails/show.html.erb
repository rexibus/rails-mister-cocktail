
<h2><%= @cocktail.name %></h2>
<h3>Ingredient & Doses List</h3>
<% @doses.each do |dose|%>
<ul>
  <li><%= dose.ingredient.name %> <%= dose.description %> -- <%= link_to "Delete a dose", cocktail_dose_path(dose), method: :delete,
    data: { confirm: "are you sure"} %></li>
</ul>
<% end  %>

<h2><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></h2>
<h2><%= link_to "Back", cocktails_path %></h2>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>


